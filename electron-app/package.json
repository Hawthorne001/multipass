{
  "name": "multipass",
  "author": "Multipass Team <multipass@lists.launchpad.net>",
  "version": "0.0.1",
  "main": "app/main.js",
  "devDependencies": {
    "electron": "~1.6.6",
    "electron-builder": "^17.1.1",
    "electron-rebuild": "^1.5.7"
  },
  "scripts": {
    "start": "sh -c 'env XDG_CURRENT_DESKTOP=$( echo $XDG_CURRENT_DESKTOP | sed s/Unity:Unity7/Unity/ ) electron app'",
    "pack": "build --dir",
    "postinstall": "install-app-deps; ./node_modules/.bin/electron-rebuild",
    "dist": "build"
  },
  "build": {
    "extraResources": [
        { "from": "../src/rpc/multipass.proto", "to": "multipass.proto" }
    ],
    "linux": {
      "target": "snap"
    },
    "snap": {
      "grade": "devel"
    }
  }
}
